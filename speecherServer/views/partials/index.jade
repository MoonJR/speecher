.container

  //button.play(value="상처를 치료해줄 사람 어디 없나") 테스트
  .write-box(ng-show="vm.wrongWordAll")
    h4 자주 틀리는 단어
    ul.nav.nav-pills(role='tablist')
      li(role='presentation', ng-repeat='item in vm.wrongWordAll')
        //실데이터
        a.btn-word(ng-click="vm.showWrongWordDialog(item)")
          | {{item._id}}
          span.badge {{item.wrongCount}}


  .row
    .col-sm-3.col-md-3(ng-repeat='item in vm.scriptList')
      a(href='/#/detail/{{item.script_id}}', style="text-decoration: none !important; color:#333;")
        .script-box(style="margin:10px;")
          h4 {{item.script_title}}
          p {{item.script_content}}




  .row
    md-content
      md-list
        md-list-item.md-3-line(ng-repeat='item in vm.scriptList')
          .roundtest(style="margin-top:15px; margin-right:15px; opacity:item.opacity",round-progress,max="100",current="item.point",color="#45ccce",bgcolor="#eaeaea",radius="30",stroke="7",semi="false",  rounded="true",  clockwise="false",  responsive="false",  duration="2000",  animation="easeInOutQuart")
          span.point 30%
          .md-list-item-text(id="{{item.script_id}}")
            h3 {{item.script_title}}
            h4 {{item.script_content}}
            p {{item.reg_date}}
          button.md-raised.md-button.md-ink-ripple(ng-click="vm.moveChoice(item)",style="margin-top: 25px;")
            span( style="text-decoration: none; color:black")
              span.ng-scope 테스트하기
            //a(id="{{item.script_id}}", ng-href="/#choice", style="text-decoration: none; color:black")
            //  span.ng-scope 테스트하기
            div.md-ripple-container
          md-divider
      button.btn-test(ng-click="vm.moveChoice(item)") test


  script(src='../js/tts.js')
