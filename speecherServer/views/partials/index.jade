.flex
  #box-texts.border.box(ng-cloak='' )
    md-toolbar.md-theme-light
      h3.md-toolbar-tools
        span 대본 목록
    md-content
      md-list
        md-list-item.md-3-line(ng-repeat='item in texts')
          .roundtest(style="margin-top:15px; margin-right:15px; opacity:item.opacity",round-progress,max="100",current="item.point",color="#45ccce",bgcolor="#eaeaea",radius="30",stroke="7",semi="false",  rounded="true",  clockwise="false",  responsive="false",  duration="2000",  animation="easeInOutQuart")
          span.point {{item.point}}%
          .md-list-item-text(id="{{item.id}}")
            h3 {{item.title}}
              //span []
            h4 {{item.text}}
            p {{item.type}}
          button.md-raised.md-button.md-ink-ripple(style="margin-top: 25px;")
            a(ng-href="/#choice/{{item.id}}", style="text-decoration: none; color:black")
              span.ng-scope 테스트하기
            div.md-ripple-container
          md-divider



  #box-words.border.box(layout='column', ng-cloak='')
    md-toolbar.md-theme-light
      h3.md-toolbar-tools
        span#dlgOpen 자주 틀리는 단어

    md-chips(ng-repeat='item in words', ng-keydown="$mdChipsCtrl.chipKeydown($event)", ng-class="{ 'md-focused': $mdChipsCtrl.hasFocus()}" )
      md-chip(id="{{item.id}}",ng-click="showWordDlg(item.word)") {{item.word}}({{item.count}})




  code($mdDialog.clickOutsideToClose(true))

