doctype html
html(lang='kr', ng-app="StarterApp")
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title

    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/base.css')
    link(rel='stylesheet', href='https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic')
    block css

    block js
    if ENV_DEVELOPMENT
      script(src='http://localhost:35729/livereload.js')
  body(layout="column",ng-controller="Basetrl")
    header
      p.logo.left SPEECHER

      .top-menu.right
        button.md-raised.md-button.md-default-theme(ng-transclude="") 대본작성
        button.md-raised.md-button.md-default-theme(ng-transclude="") 대본목록
        img(alt="프로필 이미지", src="/images/default_profile_image.png")
        p 반상현


    main
      block content
    footer



    //Angular Material Dependencies
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-animate.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-aria.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.js')

    script(src='/angularjs/base.js')


